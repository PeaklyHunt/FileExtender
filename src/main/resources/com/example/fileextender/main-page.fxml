<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fileextender.Controller" fx:id="fullScene">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Filename-extension:"/>
    <TextField fx:id="extension" ></TextField>
    <CheckBox fx:id="prefix" text="prefix (unselected means postfix)"></CheckBox>

    <Button fx:id="fileChooserButton" text="Apply change on files.." onAction="#onFileChooser"/>


    <Label fx:id="resultMessage"/>
</VBox>
